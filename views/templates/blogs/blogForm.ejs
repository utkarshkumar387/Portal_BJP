        <div class="col-md-3 sidemenu" id="sidemenu">
            <div class="component">
                <%- include('../../particles/sidebarBlog.ejs') -%>
            </div>
        </div>
        <div id="mySidenav" class="sidenav sidemenuMobile" id="sidemenuMobile">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
            <div class="component">
                <%- include('../../particles/sidebarBlog.ejs') -%>
            </div>
        </div>
        <div class="col-md-12 col-lg-9 col-12 home__content">
            <div id="blogValidations"></div>
            <div class="card card_body_dark home__events cardStyle mb-4" id="home__events">
                <div class="home__complaintForm headerMain">
                    <p>Blog Form</p>
                </div>
                <div class="profile__editData">
                    <div class="mb-4">
                        <div class="profile__inner px-5 mb-5 mt-4">
                            <div class="profile__innerHeader py-3">
                                <p>Blog Details</p>
                            </div>
                            <div class="form-group row">
                                <label for="blogAuthor" class="col-sm-4 col-form-label">Author's Full Name
                                    <span>*</span></label>
                                <div class="col-sm-8">
                                    <input type="text" disabled class="form-control dark_box" id="blogAuthor"
                                        placeholder="">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="blogTitle" class="col-sm-4 col-form-label">Blog's Title
                                    <span>*</span></label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control dark_box" id="blogTitle" placeholder="">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="blogTitle" class="col-sm-4 col-form-label">Blog
                                    Image</label>
                                <div class="col-sm-8">
                                    <label for="browse" style="width: 100%;">
                                        <div class="browseDesign tab_dark d-flex">
                                            <div class="d-flex browseDesign__image">
                                                <div class="d-flex browseDesign__inner">
                                                    <div class="upload__icon">
                                                        <img class="icon_img" src="/img/icons/uploadForm.png" alt="">
                                                    </div>
                                                    <p class="upload__para">
                                                        Upload image</p>
                                                    <input onchange="convertSingleBase64(this)" id="browse" type="file"
                                                        multiple>
                                                </div>
                                            </div>
                                        </div>
                                    </label>
                                    <img id="preview"></img>
                                </div>
                            </div>
