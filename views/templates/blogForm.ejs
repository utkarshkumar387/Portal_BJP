<% layout('layout') %>
    <div class="row mt-4 home">
        <div class="col-md-3 sidemenu">
            <div class="component">
                <%- include('../particles/sidebarBlog.ejs') -%>
            </div>
        </div>
        <div class="col-md-9 home__content">
            <div class="card home__events cardStyle mb-4" id="home__events">
                <div class="home__complaintForm headerMain">
                    <p>Blog Form</p>
                </div>
                <div class="profile__editData">
                    <div class="mb-4">
                        <div class="profile__inner px-5 mb-5 mt-4">
                            <div class="profile__innerHeader py-3">
                                <p>Blog Details</p>
                            </div>
                            <div class="form-group row">
                                <label for="blogAuthor" class="col-sm-4 col-form-label">Author's Full Name
                                    <span>*</span></label>
                                <div class="col-sm-8">
                                    <input type="text" disabled class="form-control" id="blogAuthor" placeholder="">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="blogTitle" class="col-sm-4 col-form-label">Blog's Title
                                    <span>*</span></label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="blogTitle" placeholder="">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="blogTitle" class="col-sm-4 col-form-label">Blog Carousel
                                    Images<span>*</span></label>
                                <div class="col-sm-8">
                                    <label class="browseDesign d-flex align-items-center justify-content-center"
                                        style="border: 1px solid red;" for="browse">
                                        <div class="d-flex align-items-center"
                                            style="border: 1px solid green; width: 100%;">
                                            <div>
                                                <img src="img/icons/uploadForm.png" alt="">
                                            </div>
                                            <p>Upload upto 5 images</p>
                                        </div>
                                        <input id="browse" style="visibility: hidden;" type="file"
                                            onchange="imgBase64Converter()" multiple>
                                    </label>
                                    <div id="preview"></div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="blogTitle" class="col-sm-4 col-form-label">Attachments (if any)</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="blogTitle" placeholder="">
                                </div>
                            </div>
                        </div>
                        <div class="mt-2 mb-4">
                            <div class="profile__inner px-5 mb-4">
                                <div class="profile__innerHeader py-3">
                                    <p>Blog Body</p>
                                </div>
                                <textarea name="" id="blogBody" rows="20" style="width: 100%;"></textarea>
                            </div>
                        </div>
                        <div class="profile__save px-5 mb-4 mt-4">
                            <a id="addEditBlog" type="button">Add Blog</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script type="application/javascript" src="/js/blogForm.js"></script>