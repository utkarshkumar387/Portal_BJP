<% layout('layout') %>
    <div class="row mt-4 home">
        <div class="col-md-3 sidemenu">
            <div class="component">
                <%- include('../particles/sidebarProfile.ejs') -%>
            </div>
        </div>
        <div class="col-md-9 home__content">
            <div class="card home__events cardStyle mb-4" id="home__events">
                <div class="home__complaintForm headerMain">
                    <p>Complaint Form</p>
                </div>
                <div class="profile__editData">
                    <div class="profile__outer mb-4">
                        <div class="profile__inner px-5 mb-5 mt-4">
                            <div class="profile__innerHeader py-3">
                                <p>Complainant's Details</p>
                            </div>
                            <div class="form-group row">
                                <label for="complainantName" disabled class="col-sm-4 col-form-label">Complainant's Full
                                    Name
                                    <span>*</span></label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" disabled id="complainantName"
                                        placeholder="">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="complainantEmail" class="col-sm-4 col-form-label">Complainant's
                                    Email
                                    <span>*</span></label>
                                <div class="col-sm-8">
                                    <input type="email" class="form-control" disabled id="complainantEmail"
                                        placeholder="">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="complainantPhone" class="col-sm-4 col-form-label">Complainant's Phone no.
                                    <span>*</span></label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" disabled id="complainantPhone"
                                        placeholder="">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="complainantAddress" class="col-sm-4 col-form-label">Complainant's Address
                                    <span>*</span></label>
                                <div class="col-sm-8">
                                    <textarea rows="3" class="form-control" disabled id="complainantAddress"
                                        placeholder="Enter Your Address"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="profile__outer mt-2 mb-4">
                        <div class="profile__inner px-5 mb-4">
                            <div class="profile__innerHeader py-3">
                                <p>Complaint Detail</p>
                            </div>
                            <div class="form-group row">
                                <label for="complaintAddMembers" class="col-sm-4 col-form-label">Complaint Addressed
                                    To<span>*</span></label>
                                <div class="col-sm-8" id="chosenManager">
                                    <div id="output"></div>
                                    <select class="form-select form-control chosen-select" name="tags[]" multiple
                                        aria-label="Default select example" data-placeholder="Choose tags...">
                                        <option value="Abhishek">Abhishek</option>
                                        <option value="Utkarsh">Utkarsh</option>
                                        <option value="Barkath">Barkath</option>
                                        <option value="Yagyansh">Yagyansh</option>
                                        <option value="Anupam">Anupam</option>
                                        <option value="Nitish">Nitish</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="complaintAddress" class="col-sm-4 col-form-label">Complaint Subject
                                    <span>*</span></label>
                                <div class="col-sm-8">
                                    <textarea rows="3" class="form-control" id="complaintAddress"
                                        placeholder="Enter Permanent Address"></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="complaintPriority" class="col-sm-4 col-form-label">Complaint
                                    priority<span>*</span></label>
                                <div class="col-sm-8">
                                    <select class="form-select form-control" aria-label="Default select example">
                                        <option selected>Select priority</option>
                                        <option value="Low">Low</option>
                                        <option value="Medium">Medium</option>
                                        <option value="High">High</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="complaintAddMembers" class="col-sm-4 col-form-label">Tag other
                                    members</label>
                                <div class="col-sm-8">
                                    <input type="text" id="vidyagames" name="vidya">
                                    <!-- <div id="output"></div>
                                    <select class="form-select form-control chosen-select allAdminsList" name="tags[]"
                                        multiple aria-label="Default select example" data-placeholder="Choose tags...">
                                        <option value="Abhishek">Abhishek</option>
                                        <option value="Utkarsh">Utkarsh</option>
                                        <option value="Barkath">Barkath</option>
                                        <option value="Yagyansh">Yagyansh</option>
                                        <option value="Anupam">Anupam</option>
                                        <option value="Nitish">Nitish</option>
                                    </select> -->
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="blogTitle" class="col-sm-4 col-form-label">Blog Carousel
                                    Images<span>*</span></label>
                                <div class="col-sm-8">
                                    <label for="browse" style="width: 100%;">
                                        <div class="browseDesign d-flex">
                                            <div class="d-flex browseDesign__files">
                                                <div class="d-flex browseDesign__inner">
                                                    <div class="upload__icon">
                                                        <img src="/img/icons/uploadForm.png" alt="">
                                                    </div>
                                                    <p class="upload__para">
                                                        Upload upto 5 Files</p>
                                                    <input id="browse" type="file" multiple>
                                                </div>
                                            </div>
                                        </div>
                                    </label>
                                    <div id="preview"></div>
                                </div>
                            </div>
                            <script>
                                document.getElementById('output').innerHTML = location.search;
                                $(".chosen-select").chosen();
                            </script>
                        </div>
                    </div>
                    <div class="profile__outer mt-2 mb-4">
                        <div class="profile__inner px-5 mb-4">
                            <div class="profile__innerHeader py-3">
                                <p>Complaint Body</p>
                            </div>
                            <textarea name="" id="complaintBody" rows="20" style="width: 100%;"></textarea>
                        </div>
                    </div>
                    <div class="profile__save px-5 mb-4 mt-4">
                        <a id="addEditComplaint" href="">Add complaint</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="application/javascript" src="/js/complaintsForm.js"></script>