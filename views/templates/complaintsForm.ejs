<% layout('layout') %>
    <div class="row mt-4 home">
        <div class="col-md-3 sidemenu">
            <div class="component">
                <%- include('../particles/sidebarProfile.ejs') -%>
            </div>
        </div>
        <div class="col-md-9 home__content">
            <div class="card home__events cardStyle mb-4" id="home__events">
                <div class="home__complaintForm headerMain">
                    <p>Complaint Form</p>
                </div>
                <div class="profile__editData">
                    <div class="profile__outer mb-4">
                        <div class="profile__inner px-5 mb-5 mt-4">
                            <div class="profile__innerHeader py-3">
                                <p>Complainant's Details</p>
                            </div>
                            <div class="form-group row">
                                <label for="complainantName" disabled class="col-sm-4 col-form-label">Complainant's Full
                                    Name
                                    <span>*</span></label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="complainantName" placeholder="">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="complainantEmail" class="col-sm-4 col-form-label">Complainant's Email
                                    <span>*</span></label>
                                <div class="col-sm-8">
                                    <input type="email" class="form-control" id="complainantEmail" placeholder="">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="complainantPhone" class="col-sm-4 col-form-label">Complainant's Phone no.
                                    <span>*</span></label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="complainantPhone" placeholder="">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="complainantAddress" class="col-sm-4 col-form-label">Complainant's Address
                                    <span>*</span></label>
                                <div class="col-sm-8">
                                    <textarea rows="3" class="form-control" id="complainantAddress"
                                        placeholder="Enter Your Address"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="profile__outer mt-2 mb-4">
                        <div class="profile__inner px-5 mb-4">
                            <div class="profile__innerHeader py-3">
                                <p>Complaint Detail</p>
                            </div>
                            <div class="form-group row">
                                <label for="complainantPermanentAddress" class="col-sm-4 col-form-label">Complaint
                                    addressed to
                                    <span>*</span></label>
                                <div class="col-sm-8">
                                    <textarea rows="3" class="form-control" id="complainantPermanentAddress"
                                        placeholder="Enter Permanent Address"></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="complaintAddress" class="col-sm-4 col-form-label">Complaint Subject
                                    <span>*</span></label>
                                <div class="col-sm-8">
                                    <textarea rows="3" class="form-control" id="complaintAddress"
                                        placeholder="Enter Permanent Address"></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="complaintPriority" class="col-sm-4 col-form-label">Complaint
                                    priority<span>*</span></label>
                                <div class="col-sm-8">
                                    <select class="form-select form-control" aria-label="Default select example">
                                        <option selected>Select priority</option>
                                        <option value="Low">Low</option>
                                        <option value="Medium">Medium</option>
                                        <option value="High">High</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="complaintAddMembers" class="col-sm-4 col-form-label">Tag other
                                    members</label>
                                <div class="col-sm-8">
                                    <div id="output"></div>
                                    <select class="form-select form-control chosen-select" name="tags[]" multiple
                                        aria-label="Default select example" data-placeholder="Choose tags...">
                                        <option value="Abhishek">Abhishek</option>
                                        <option value="Utkarsh">Utkarsh</option>
                                        <option value="Barkath">Barkath</option>
                                        <option value="Yagyansh">Yagyansh</option>
                                        <option value="Anupam">Anupam</option>
                                        <option value="Nitish">Nitish</option>
                                    </select>
                                </div>
                            </div>
                            <script>
                                document.getElementById('output').innerHTML = location.search;
                                $(".chosen-select").chosen();
                            </script>
                        </div>
                    </div>
                    <div class="profile__outer mt-2 mb-4">
                        <div class="profile__inner px-5 mb-4">
                            <div class="profile__innerHeader py-3">
                                <p>Complaint Body</p>
                            </div>
                            <textarea name="" id="complaintBody" rows="20" style="width: 100%;"></textarea>
                        </div>
                    </div>
                    <div class="profile__save px-5 mb-4 mt-4">
                        <a onclick="complaintAdd()" href="">Add complaint</a>
                    </div>
                </div>
            </div>
        </div>
    </div>